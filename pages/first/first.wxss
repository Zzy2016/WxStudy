/* pages/first/first.wxss */

.page {
  width: 100%;
  height: 100%;
  background: #f6f6f6;
}

/* 列表iten样式 */

.item {
  width: 100%;
  height: 90px;
  background: #fff;
  margin-bottom: 5px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.itemleft {
  margin: 10px;
  position: relative;
  flex: 1;
}

.itemtitle {
  width: auto;
  height: auto;
  font-size: 28rpx;
  color: #000;
}

.itemcontent {
  width: auto;
  height: auto;
  font-size: 24rpx;
  margin-top: 8px;
  color: #6c6c6c;
}

.itemtime {
  width: auto;
  height: auto;
  font-size: 20rpx;
  position: absolute;
  bottom: 0;
  color: #9a9a9a;
}

.itemimg {
  width: 70px;
  height: 70px;
  background: #dce3f3;
  margin-right: 10px;
  margin-top: 10px;
  border: 1px colod #000;
  border-radius: 5px;
}

/* margin-right: 10px;
  margin-top: 10px; */

.mask {
  width: 100%;
  height: 100%;
  background: #70999999;
  position: fixed;
  top: 0px;
}

.windowcontent {
  width: 64%;
  height: auto;
  background: #fff;
  margin-left: 15%;
  margin-right: 15%;
  margin-top: 20%;
  border-radius: 8px;
  padding-top: 50rpx;
  padding-bottom: 50rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-left: 3%;
  padding-right: 3%;
}

.title {
  width: 100%;
  height: auto;
  text-align: center;
  font-size: 42rpx;
  color: #000;
  font-weight: bold;
}

.save {
  width: 200rpx;
  height: 60rpx;
  background: #248cfa;
  border-radius: 5px;
  color: #fff;
  align-self: center;
  text-align: center;
  line-height: 60rpx;
  margin-top: 20px;
  font-size: 24rpx;
}

.hintinput {
  font-size: 20rpx;
  color: #9a9a9a;
  margin-top: 10px;
  width: 100%;
  float: left;
}

.hintPhone {
  width: 100%;
  margin-top: 10px;
  font-size: 30rpx;
}

.nameorphone {
  display: flex;
  flex-direction: row;
  width: 100%;
  margin-top: 10px;
  font-size: 30rpx;
  height: 45rpx;
}

.left {
  flex: 1;
  text-align: right;
}

.left::before {
  content: "*";
  color: #ff1212;
}

.input1 {
  flex: 1;
  border-radius: 5px;
  border: 1px solid #6c6c6c;  
  height: 45rpx;
}

picker {
  width: 130rpx;
  height: 45rpx;
  border-radius: 5px;
  border: 1px #6c6c6c solid;
  margin-left: 5rpx;
  text-align: center;
  font-size: 30rpx;
  
}

.error{
   color: #ff1212;
   font-size: 20rpx;
   margin-top: 20rpx;
}
