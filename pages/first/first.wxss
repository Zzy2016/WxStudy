/* pages/first/first.wxss */

.page {
  width: 100%;
  height: 100%;
  background: #f6f6f6;
}

/* 列表iten样式 */

.item {
  width: 100%;
  height: 90px;
  background: #fff;
  margin-bottom: 5px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.itemleft {
  margin: 10px;
  position: relative;
}

.itemtitle {
  width: auto;
  height: auto;
  font-size: 28rpx;
  color: #000;
}

.itemcontent {
  width: auto;
  height: auto;
  font-size: 24rpx;
  margin-top: 8px;
  color: #6c6c6c;
}

.itemtime {
  width: auto;
  height: auto;
  font-size: 20rpx;
  position: absolute;
  bottom: 0;
  color: #9a9a9a;
}

.itemimg {
  width: 70px;
  height: 70px;
  background: #dce3f3;
  margin-right: 10px;
  margin-top: 10px;
  border: 1px colod #000;
  border-radius: 5px;
}

/* margin-right: 10px;
  margin-top: 10px; */

.mask {
  width: 100%;
  height: 100%;
  background: #90999999;
  position: fixed;
  top: 0px;
}

.windowcontent {
  width: 70%;
  height: 800rpx;
  background: #fff;
  margin-left: 15%;
  margin-right: 15%;
  margin-top: 20%;
}

.title {
  width: 100%;
  height: auto;
  text-align: center;
}
