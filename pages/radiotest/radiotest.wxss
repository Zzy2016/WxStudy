.title{
  margin-left: 20px;
  margin-top: 50rpx;
  font-size: 30rpx;
  color: #999999;
}

radio .wx-radio-input {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%; /* 圆角 *//* border: 2rpx solid red; */
  background: #ffffff
}

/* 选中后 背景及勾 的样式 */

radio .wx-radio-input.wx-radio-input-checked::before {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%; /* 圆角 */
  line-height: 40rpx;
  text-align: center;
  font-size: 0rpx; /* 勾大小 */
  color: #248cfa; /* 白色勾  */
  transform: translate(-50%, -50%) scale(1);
  
}

.label { 
  width: 50rpx;
  height: 50rpx;
  position: relative;
  border-radius: 50%; /* 圆角 */
}

.text{
  position: relative;  
  z-index: 10;  
  width: 50rpx;
  height: 50rpx;
  top: -50rpx;
  text-align: center;
  line-height: 46rpx;
  border-radius: 50%; /* 圆角 */
  
}


